    <!-- Content for the Edit Page -->
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <!-- Heading for the Edit Page -->
                <h1>Edit a Previous Entry</h1>
                <!-- Form for editing a previous entry -->
                <form class="form" method="post">

                    <div class="form-group">
                        <!-- Input field for editing the food item, with placeholder and default value -->
                        <label for="FoodItemTextField">Food Item</label>
                        <input type="text" class="form-control"
                        id="FoodItemTextField"
                        placeholder="Enter the Food Item"
                        name="FoodItem"
                        value="<%= cal.FoodItem %>"
                        required>
                    </div>

                    <div class="form-group">
                        <!-- Input field for editing calories, with placeholder and default value -->
                        <label for="CaloriesTextField">Calories</label>
                        <input type="number" class="form-control"
                        id="CaloriesTextField"
                        placeholder="Enter the Calories Amount"
                        name="Calories"
                        value="<%= cal.Calories %>"
                        required>
                    </div>

                    <div class="form-group">
                        <!-- Input field for editing protein, with placeholder and default value -->
                        <label for="ProteinField">Protein(g)</label>
                        <input type="number" class="form-control"
                        id="ProteinTextField"
                        placeholder="Enter the Protein Amount in grams"
                        name="Protein" 
                        value="<%= cal.Protein %>"
                        required>
                    </div>

                    <div class="form-group">
                        <!-- Input field for editing carbs, with placeholder and default value -->
                        <label for="CarbsTextField">Carbs(g)</label>
                        <input type="number" class="form-control"
                        id="CarbsTextField"
                        placeholder="Enter the Carbs Amount in grams"
                        name="Carbs" 
                        value="<%= cal.Carbs %>"
                        required>
                    </div>

                    <div class="form-group">
                        <!-- Input field for editing fat, with placeholder and default value -->
                        <label for="FatTextField">Fat(g)</label>
                        <input type="number" class="form-control"
                        id="FatTextField"
                        placeholder="Enter the Fat Amount in grams"
                        name="Fat" 
                        value="<%= cal.Fat %>"
                        required>
                    </div>
                    
                    <!-- Submit and Cancel buttons for the form -->
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit
                    </button>

                    <a href="/cal-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel </a>
                    
                </form>   
                <br>
                <br>         
            </div>
        </div>
    </div>

