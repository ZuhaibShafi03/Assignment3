    <!-- Main content section for the Calorie Tracker page -->
    <main class="container">
      <div class="row">
        <div class="col-md-12">
          <!-- Heading for the Calorie Tracker page -->
          <h1>Welcome to Calorie Tracker</h1>
          
          <!-- Button to add a new food item -->
          <a href="/cal-list/add" class="btn btn-outline-success" role="button">
            <i class="fas fa-plus-circle"></i> Add a new Food Item
          </a>
          
          <br>
          
          <!-- Table to display the list of food items with their nutritional information -->
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover custom-table">
              <thead class="thead-dark">
                <tr>
                  <!-- Column headers for the table -->
                  <th class="text-center col-3">Food Item</th>
                  <th class="text-center col-1">Calories</th>
                  <th class="text-center col-1">Protein (g)</th>
                  <th class="text-center col-1">Carbs (g)</th>
                  <th class="text-center col-1">Fat (g)</th>
                  <th class="text-center col-2">Actions</th>
                </tr>
              </thead>
              <tbody>
                <!-- Loop through the list of food items and display them in the table -->
                <% let totalCalories = 0, totalProtein = 0, totalCarbs = 0, totalFat = 0; %>
                <% for (let count = 0; count < Callist.length; count++) { %>
                  <tr>
                    <!-- Display each food item's details in a row -->
                    <td class="text-center"><%= Callist[count].FoodItem %></td>
                    <td class="text-center"><%= Callist[count].Calories %></td>
                    <td class="text-center"><%= Callist[count].Protein %></td>
                    <td class="text-center"><%= Callist[count].Carbs %></td>
                    <td class="text-center"><%= Callist[count].Fat %></td>
                    <!-- Actions for each food item (Edit and Delete) -->
                    <td class="text-center">
                      <a href="/cal-list/edit/<%= Callist[count]._id %>" class="btn btn-outline-primary btn-sm mr-1">
                        <i class="fas fa-pencil-alt"></i> Edit
                      </a>
                      <a href="/cal-list/delete/<%= Callist[count]._id %>" class="btn btn-outline-danger btn-sm delete-link">
                        <i class="fas fa-trash-alt"></i> Delete
                      </a>
                    </td>
                  </tr>
                  <!-- Calculate totals for the nutritional information -->
                  <% totalCalories += Callist[count].Calories; %>
                  <% totalProtein += Callist[count].Protein; %>
                  <% totalCarbs += Callist[count].Carbs; %>
                  <% totalFat += Callist[count].Fat; %>
                <% } %>
                <!-- Display totals row at the end of the table -->
                <tr>
                  <td class="text-center font-weight-bold">Totals</td>
                  <td class="text-center font-weight-bold"><%= totalCalories %></td>
                  <td class="text-center font-weight-bold"><%= totalProtein %></td>
                  <td class="text-center font-weight-bold"><%= totalCarbs %></td>
                  <td class="text-center font-weight-bold"><%= totalFat %></td>
                  <td class="text-center"></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </body>
